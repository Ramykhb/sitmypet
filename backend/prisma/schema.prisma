generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String        @id @default(uuid())
  email                    String        @unique @db.Citext
  passwordHash             String
  roles                    Role[]
  createdAt                DateTime      @default(now())
  updatedAt                DateTime      @updatedAt
  firstname                String
  lastname                 String
  refreshTokenExp          DateTime?
  refreshTokenHash         String?
  refreshTokenJti          String?
  emailVerified            Boolean       @default(false)
  emailOtpAttempts         Int           @default(0)
  emailOtpExpires          DateTime?
  emailOtpHash             String?
  passwordResetOtpAttempts Int           @default(0)
  passwordResetOtpExpires  DateTime?
  passwordResetOtpHash     String?
  profileImageUrl          String?       @default("https://pub-4f8704924751443bbd3260d113d11a8f.r2.dev/uploads/pfps/default_pfp.png")
  applications             Application[]
  bookingsAsOwner          Booking[]     @relation("OwnerBookings")
  bookingsAsSitter         Booking[]     @relation("SitterBookings")
  ownedPets                Pet[]         @relation("PetOwner")
  postsAsOwner             Post[]        @relation("OwnerPosts")
  profile                  Profile?
  savedPosts               SavedPost[]
  savedSitters             SavedSitter[]
}

model Profile {
  id             String          @id @default(uuid())
  userId         String          @unique
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  locationId     String?
  document       Document?
  location       Location?       @relation(fields: [locationId], references: [id])
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  profilePicture ProfilePicture?
  savedBy        SavedSitter[]
}

model Pet {
  id        String    @id @default(uuid())
  name      String
  breed     String?
  imageUrl  String?
  ownerId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  owner     User      @relation("PetOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  posts     Post[]
}

model Booking {
  id            String        @id @default(uuid())
  sitterId      String
  ownerId       String
  petId         String
  location      String
  scheduledTime DateTime
  status        BookingStatus @default(CONFIRMED)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  serviceId     String
  owner         User          @relation("OwnerBookings", fields: [ownerId], references: [id], onDelete: Cascade)
  pet           Pet           @relation(fields: [petId], references: [id], onDelete: Cascade)
  service       Service       @relation(fields: [serviceId], references: [id])
  sitter        User          @relation("SitterBookings", fields: [sitterId], references: [id], onDelete: Cascade)
  review        Review?

  @@index([sitterId, scheduledTime])
  @@index([ownerId])
}

model Post {
  id            String        @id @default(uuid())
  ownerId       String
  serviceId     String
  title         String
  location      String
  scheduledTime DateTime
  title         String
  location      String
  duration      String
  imageUrl      String?
  status        PostStatus    @default(OPEN)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  price         Decimal?      @db.Decimal(10, 2)
  description   String
  petId         String?
  serviceId     String
  scheduledTime DateTime
  applications  Application[]
  owner         User          @relation("OwnerPosts", fields: [ownerId], references: [id], onDelete: Cascade)
  pet           Pet?          @relation(fields: [petId], references: [id])
  service       Service       @relation(fields: [serviceId], references: [id])
  savedBy       SavedPost[]
  applications  Application[]

  @@index([status, createdAt])
}

model SavedPost {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
}

model Application {
  id        String            @id @default(uuid())
  postId    String
  sitterId  String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  status    ApplicationStatus @default(PENDING)

  post      Post              @relation(fields: [postId], references: [id], onDelete: Cascade)
  sitter    User              @relation(fields: [sitterId], references: [id], onDelete: Cascade)
  status    ApplicationStatus @default(PENDING)
  updatedAt DateTime
  post      Post              @relation(fields: [postId], references: [id], onDelete: Cascade)
  sitter    User              @relation(fields: [sitterId], references: [id], onDelete: Cascade)

  @@unique([postId, sitterId])
}

model Review {
  id        String   @id @default(uuid())
  bookingId String   @unique
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
}

model Location {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Profile   Profile[]
}

model Service {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  posts     Post[]
}

model SavedSitter {
  id              String   @id @default(uuid())
  userId          String
  sitterProfileId String
  createdAt       DateTime @default(now())
  profile         Profile  @relation(fields: [sitterProfileId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sitterProfileId])
  @@index([userId])
}

model Document {
  id        String   @id @default(uuid())
  status    String   @default("UNVERIFIED")
  createdAt DateTime @default(now())
  profileId String   @unique
  fileKey   String?
  fileUrl   String
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model ProfilePicture {
  id        String   @id @default(uuid())
  profileId String   @unique
  url       String   @default("https://pub-4f8704924751443bbd3260d113d11a8f.r2.dev/uploads/pfps/default_pfp.png")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

enum Role {
  OWNER
  SITTER
}

enum BookingStatus {
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum PostStatus {
  OPEN
  CLOSED
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
}
