generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String         @id @default(uuid())
  email                    String         @unique @db.Citext
  passwordHash             String
  roles                    Role[]
  createdAt                DateTime       @default(now())
  updatedAt                DateTime       @updatedAt
  firstname                String
  lastname                 String
  refreshTokenExp          DateTime?
  refreshTokenHash         String?
  refreshTokenJti          String?
  emailVerified            Boolean        @default(false)
  emailOtpAttempts         Int            @default(0)
  emailOtpExpires          DateTime?
  emailOtpHash             String?
  passwordResetOtpAttempts Int            @default(0)
  passwordResetOtpExpires  DateTime?
  passwordResetOtpHash     String?
  profileImageUrl          String?
  bookingsAsOwner          Booking[]      @relation("OwnerBookings")
  bookingsAsSitter         Booking[]      @relation("SitterBookings")
  ownedPets                Pet[]          @relation("PetOwner")
  requestsAsOwner          Request[]      @relation("OwnerRequests")
  savedRequests            SavedRequest[]
  savedSitters             SavedSitter[]
  profile                  Profile?
  document                 Document?
}

model Profile {
  id            String            @id @default(uuid())
  userId        String            @unique
  location      String
  bio           String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  idDocumentUrl String?
  services      ServiceOffering[]
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedBy       SavedSitter[]
}

model ServiceOffering {
  id              String   @id @default(uuid())
  sitterProfileId String
  serviceType     String
  price           Decimal  @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  profile         Profile  @relation(fields: [sitterProfileId], references: [id], onDelete: Cascade)

  @@index([sitterProfileId])
  @@index([serviceType])
}

model Pet {
  id        String    @id @default(uuid())
  name      String
  breed     String?
  imageUrl  String?
  ownerId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  owner     User      @relation("PetOwner", fields: [ownerId], references: [id], onDelete: Cascade)
}

model Booking {
  id            String        @id @default(uuid())
  sitterId      String
  ownerId       String
  petId         String
  serviceType   String
  location      String
  scheduledTime DateTime
  status        BookingStatus @default(CONFIRMED)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  owner         User          @relation("OwnerBookings", fields: [ownerId], references: [id], onDelete: Cascade)
  pet           Pet           @relation(fields: [petId], references: [id], onDelete: Cascade)
  sitter        User          @relation("SitterBookings", fields: [sitterId], references: [id], onDelete: Cascade)
  review        Review?

  @@index([sitterId, scheduledTime])
  @@index([ownerId])
}

model Request {
  id          String         @id @default(uuid())
  ownerId     String
  title       String
  location    String
  serviceType String
  duration    String
  imageUrl    String?
  status      RequestStatus  @default(OPEN)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  price       Decimal?       @db.Decimal(10, 2)
  owner       User           @relation("OwnerRequests", fields: [ownerId], references: [id], onDelete: Cascade)
  savedBy     SavedRequest[]

  @@index([status, createdAt])
}

model SavedRequest {
  id        String   @id @default(uuid())
  userId    String
  requestId String
  createdAt DateTime @default(now())
  request   Request  @relation(fields: [requestId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, requestId])
  @@index([userId])
}

model Review {
  id        String   @id @default(uuid())
  bookingId String   @unique
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
}

model Location {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SavedSitter {
  id              String   @id @default(uuid())
  userId          String
  sitterProfileId String
  createdAt       DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile         Profile  @relation(fields: [sitterProfileId], references: [id], onDelete: Cascade)

  @@unique([userId, sitterProfileId])
  @@index([userId])
}

enum Role {
  OWNER
  SITTER
}

enum BookingStatus {
  CONFIRMED
  COMPLETED
  CANCELLED
}


enum RequestStatus {
  OPEN
  CLOSED
}

model Document {
  id         String   @id @default(uuid())
  userId     String   @unique
  filePath   String
  rawText    String
  idNumber   String?
  dob        String?
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
