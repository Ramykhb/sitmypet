generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  SITTER
}

model User {
  id               String    @id @default(uuid())
  firstname        String
  lastname         String
  email            String    @unique
  passwordHash     String
  roles            Role[]
  activeRole       Role?
  refreshTokenHash String?
  refreshTokenJti  String?
  refreshTokenExp  DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
